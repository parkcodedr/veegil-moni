    e.preventDefault();
    const appname = (form[0].value).toLowerCase();
console.log(appname);

    const url = "http://localhost:5000/detector";
    const options = {
        method: 'POST',
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ appname })
    }
    fetch(url, options)
        .then(response => response.json())
        .then(data => {
